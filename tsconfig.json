{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",

    "experimentalDecorators": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,

    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "api/*": [ "src/api/*" ],
      "blocks/*": [ "src/blocks/*" ],
      "components/*": [ "src/components/*" ],
      "controllers/*": [ "src/controllers/*" ],
      "core/*": [ "src/core/*" ],
      "layouts/*": [ "src/layouts/*" ],
      "pages/*": [ "src/pages/*" ],
      "utils/*": [ "src/utils/*" ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    ".parcel-cache",
    "node_modules"
  ]
}
