{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "parcel --target frontend --no-cache",
    "build": "parcel build --target frontend --no-cache",
    "build:back": "parcel build --target backend --no-cache",
    "build:test": "parcel build --target test --no-cache \"src/**/*.spec.ts\"",
    "lint": "run-s lint:*",
    "lint:ts": "tsc --noEmit",
    "lint:js": "eslint .",
    "lint:css": "stylelint .",
    "test": "npm run build:test && mocha",
    "server": "node dist/backend/server.js",
    "start": "run-s build build:back server"
  },
  "alias": {
    "api": "./src/api",
    "blocks": "./src/blocks",
    "components": "./src/components",
    "controllers": "./src/controllers",
    "core": "./src/core",
    "layouts": "./src/layouts",
    "pages": "./src/pages",
    "utils": "./src/utils"
  },
  "targets": {
    "frontend": {
      "sourceMap": true,
      "context": "browser",
      "source": [
        "src/index.html",
        "src/blockedcookies.html"
      ]
    },
    "backend": {
      "sourceMap": false,
      "context": "node",
      "source": "server.ts"
    },
    "test": {
      "sourceMap": false,
      "context": "node",
      "distDir": "dist/tests"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "^1.0.1",
    "@parcel/transformer-less": "^2.7.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.7",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "postcss-less": "^6.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "nanoid": "^4.0.0"
  }
}
