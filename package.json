{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "rimraf dist .parcel-cache",
    "dev": "parcel --target frontend",
    "build": "parcel build",
    "cleandev": "run-s clean dev",
    "cleanbuild": "run-s clean build",
    "lint": "run-s lint:*",
    "lint:ts": "tsc --noEmit",
    "lint:js": "eslint .",
    "lint:css": "stylelint .",
    "server": "node dist/backend/server.js",
    "start": "run-s cleanbuild server"
  },
  "alias": {
    "components": "./src/components",
    "core": "./src/core",
    "layouts": "./src/layouts",
    "pages": "./src/pages"
  },
  "targets": {
    "frontend": {
      "sourceMap": true,
      "context": "browser",
      "distDir": "dist",
      "source": "src/index.html"
    },
    "backend": {
      "sourceMap": false,
      "context": "node",
      "source": "server.ts"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "^1.0.1",
    "@parcel/transformer-less": "^2.7.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.25.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "postcss-less": "^6.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "nanoid": "^4.0.0"
  }
}
