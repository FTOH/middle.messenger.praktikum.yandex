---
title: Регистрация
---
{{!< main}}


<form class="container__content" action="./profile.html">
  <h1>Регистрация</h1>

  <div class="container__element">
    {{> input type="email" name="email" text="Почта"}}
  </div>

  <div class="container__element">
    {{> input type="text" name="login" text="Логин"}}
  </div>

  <div class="container__element">
    {{> input type="text" name="first_name" text="Имя"}}
  </div>

  <div class="container__element">
    {{> input type="text" name="second_name" text="Фамилия"}}
  </div>

  <div class="container__element">
    {{> input type="tel" name="phone" text="Номер телефона"}}
  </div>

  <div class="container__element">
    {{> input type="password" name="password" text="Пароль"}}
  </div>

  <div class="container__element">
    {{> input type="password" name="password_check" text="Пароль (ещё раз)"}}
  </div>

  <div class="container__element container__element--gap">
    {{> button text="Создать аккаунт"}}
  </div>

  <div class="container__element">
    {{> link text="Уже есть? Войти" href="./auth.hbs"}}
  </div>
</form>
